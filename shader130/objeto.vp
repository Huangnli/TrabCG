#version 130

in vec3 vertexPosition;
in vec3 vertexNormal;

out vec3 normal;
out vec3 fragPosition;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main(){
  gl_Position = projection*view*model * vec4(vertexPosition, 1.0);
  
  fragPosition = vec3(model*vec4(vertexPosition, 1.0));
  normal = vertexNormal;
}

